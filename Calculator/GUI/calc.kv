<myLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: calc_input
            text: "0"
            halign: "right"
            font_size: 65
            size_hint: (1,.15)

        GridLayout:
            cols:5
            rows:6

            Button:
                size_hint: (.2,.2)
                font_size: 32
                text: "%"
            Button:
                size_hint: (.2,.2) 
                font_size: 28
                text: "CE"
            Button:
                id: clear
                size_hint: (.2,.2) 
                font_size: 32
                text: "C"
                on_press: root.clear()
            Button:
                size_hint: (.2,.2) 
                font_size: 32
                text: "/"
            Button:
                size_hint: (.2,.2) 
                font_size: 32
                text: "^"
                background_color: (64/255,64/255,64/255,1)
            Button:
                size_hint: (.2,.2) 
                font_size: 32
                text: "7"
                background_color: (157/255,157/255,157/255,1)
                on_press: root.button_press(7)
            Button:
                size_hint: (.2,.2) 
                font_size: 32
                text: "8"
                on_press: root.button_press(8)
                background_color: (157/255,157/255,157/255,1)
            Button:
                size_hint: (.2,.2) 
                font_size: 32
                text: "9"
                on_press: root.button_press(9)
                background_color: (157/255,157/255,157/255,1)
            Button:
                size_hint: (.2,.2) 
                font_size: 32
                text: "X"
                on_press:root.button_press('X')
            Button:
                size_hint: (.2,.2) 
                font_size: 28
                text: "GCD"
                on_press: root.GCD()
                background_color: (64/255,64/255,64/255,1)
            Button:
                size_hint: (.2,.2) 
                font_size: 32
                text: "4"
                on_press: root.button_press(4)
                background_color: (157/255,157/255,157/255,1)
            Button:
                size_hint: (.2,.2) 
                font_size: 32
                text: "5"
                on_press: root.button_press(5)
                background_color: (157/255,157/255,157/255,1)
            Button:
                size_hint: (.2,.2) 
                font_size: 32
                text: "6"
                on_press: root.button_press(6)
                background_color: (157/255,157/255,157/255,1)
            Button:
                size_hint: (.2,.2) 
                font_size: 32
                text: "+"
                on_press: root.button_press('+')
            Button:
                size_hint: (.2,.2) 
                font_size: 28
                text: "LCM"
                on_press: root.LCM()
                background_color: (64/255,64/255,64/255,1)
            Button:
                size_hint: (.2,.2) 
                font_size: 32
                text: "1"
                on_press: root.button_press(1)
                background_color: (157/255,157/255,157/255,1)
            Button:
                size_hint: (.2,.2) 
                font_size: 32
                text: "2"
                on_press: root.button_press(2)
                background_color: (157/255,157/255,157/255,1)
            Button:
                size_hint: (.2,.2) 
                font_size: 32
                text: "3"
                on_press: root.button_press(3)
                background_color: (157/255,157/255,157/255,1)
            Button:
                size_hint: (.2,.2) 
                font_size: 32
                text: "-"
                on_press: root.button_press('-')
            Button:
                size_hint: (.2,.2) 
                font_size: 28
                text: "Cat"
                background_color: (64/255,64/255,64/255,1)
            Button:
                size_hint: (.2,.2) 
                font_size: 32
                text: "+/-"
                background_color: (157/255,157/255,157/255,1)
            Button:
                size_hint: (.2,.2) 
                font_size: 32
                text: "0"
                on_press: root.button_press(0)
                background_color: (157/255,157/255,157/255,1)
            Button:
                size_hint: (.2,.2) 
                font_size: 32
                text: "."
                background_color: (157/255,157/255,157/255,1)
            Button:
                size_hint: (.2,.2) 
                font_size: 32
                text: "="
                on_press: root.equal()
            Button:
                size_hint: (.2,.2) 
                font_size: 28
                text: ","
                on_press: root.button_press(',')
                background_color: (64/255,64/255,64/255,1)
